{
  "name": "simchart-automation",
  "version": "1.0.0",
  "description": "test automation",
  "main": "index.js",
  "scripts": {
    "test": "cross-env SKIP_S3=true node scripts/test.js && npm run posttest",
    "posttest": "npm run combine-reports && npm run generate-report",
    "combine-reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochareports/report.json",
    "generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",
    "xml-report": "jrm combined.xml cypress/reports/junit/*.xml",
    "upload:s3": "node scripts/helper/archive.and.upload.js",
    "cy:open": "cypress open",
    "cy:run:allure": "cypress run --headed --env allure=true",
    "allure:report": "allure generate allure-results --clean -o allure-report",
    "cy:parallel": "cypress-parallel -s cy:run:allure -t 2 -d ./cypress/e2e/demo/*",
    "format": "prettier --write \"cypress/**/*.{js,ts,json}\"",
    "build": "node scripts/pre-build.js",
    "openshift": "npm install && npm install -g http-server && npm install -g rimraf && npm test && npm run openshift-clean",
    "openshift-clean": "rimraf node_modules && rimraf /root/.cache && rimraf /root/.config && rimraf core*",
    "nightlysmoke": "cypress run --browser chrome --spec cypress/integration/features/charts/instructor/*.js,cypress/integration/features/charts/vital-sign/**/*.js,cypress/integration/features/charts/ivs/*.js,cypress/integration/features/charts/admission-history/**/*.js"
  },
  "author": "Justin",
  "license": "MIT",
  "dependencies": {
    "@cypress/request": "2.88.7",
    "archiver": "5.0.2",
    "aws-sdk": "2.761.0",
    "axios": "0.21.1",
    "browserslist": "^4.17.6",
    "caniuse-lite": "^1.0.30001279",
    "chai": "4.2.0",
    "cypress-grep": "2.5.2",
    "cypress-multi-reporters": "1.5.0",
    "cypress-parallel": "0.9.1",
    "cypress-wait-until": "1.7.1",
    "cypress-xpath": "1.6.1",
    "dayjs": "1.10.4",
    "faker": "5.1.0",
    "make-promises-safe": "5.1.0",
    "mocha": "8.1.3",
    "mochawesome": "6.1.1",
    "mochawesome-merge": "4.2.0",
    "mochawesome-report-generator": "5.1.0",
    "rimraf": "3.0.2",
    "shelljs": "0.8.2",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.34.0",
    "cross-env": "7.0.3",
    "cypress": "10.8.0",
    "junit-report-merger": "2.2.2",
    "mocha-junit-reporter": "2.0.0",
    "prettier": "1.19.1",
    "sonarqube-scanner": "2.8.0",
    "typescript": "4.1.3"
  }
}
